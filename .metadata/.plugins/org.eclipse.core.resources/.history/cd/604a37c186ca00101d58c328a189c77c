package com.project.PatientService.service;
import java.util.List;

import com.project.PatientService.DTO.AppointmentCreateDTO;
import com.project.PatientService.DTO.AppointmentDTO;
import com.project.PatientService.DTO.AppointmentUpdateDTO;
public interface AppointmentService {

	List<AppointmentDTO> getAllAppointment();
	List<AppointmentDTO> getAppointmentByDoctorId(int doctorId);
	List<AppointmentDTO> getAppointmentByPatientId(int patientId);
	AppointmentDTO getAppointmentById(int appointmentId);
	AppointmentDTO createAppointment(AppointmentCreateDTO dto);
	AppointmentDTO updateAppointment(int id, AppointmentUpdateDTO dto);

}
